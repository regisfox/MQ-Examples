<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>jboss_module</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>${project.build.directory}/${project.name}-${project.version}.jar</source>
			<outputDirectory>${jboss_module_path}</outputDirectory>
			<destName>${project.name}.jar</destName>
		</file>
		<file>
			<source>${project.basedir}/src/assembly/module.xml</source>
			<outputDirectory>${jboss_module_path}</outputDirectory>
			<destName>module.xml</destName>
		</file>
	</files>
</assembly>